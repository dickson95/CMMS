<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="com.esteban.cmms.maven.controller.beans.Usuarios" table="Usuarios" catalog="CMMS" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="Id" />
            <generator class="identity" />
        </id>
        <property name="usuario" type="string">
            <column name="Usuario" length="50" not-null="true" />
        </property>
        <property name="contrasena" type="string">
            <column name="Contrasena" length="16" not-null="true" />
        </property>
        <property name="rol" type="string">
            <column name="Rol" length="20" not-null="false" />
        </property>
    </class>

</hibernate-mapping>
